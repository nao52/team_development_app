<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(model: @article) do |f| %>
      <div class="mb-3">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :body, "内容" %>
        <%= f.text_area :body, cols: 50, rows: 5, class: 'form-control' %>
      </div>

      <%= f.submit button_message, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
