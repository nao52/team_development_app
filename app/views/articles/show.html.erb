<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= @article.title %></h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @article.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@article.user.last_name} #{@article.user.first_name}" %></li>
                <li class="list-inline-item"><%= l @article.created_at, format: :long %></li>
              </ul>
              <div class='d-flex justify-content-end'>
                <%= link_to t('.edit'), edit_article_path(@article), id: "button-edit-#{@article.id}" %>
                <%= link_to t('.delete'), article_path(@article), id: "button-delete-#{@article.id}", class: "ms-2", data: { turbo_method: :delete, turbo_confirm: "削除しますか" } %>
              </div>
              </div>
            </div>
            <p><%= simple_format(@article.body) %></p>
          </div>
        </article>
      </div>
    </div>
    <%= render 'comments/form', comment: @comment, article: @article %>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <table class="table">
          <tbody id="table-comment">
            <%= render @comments %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>